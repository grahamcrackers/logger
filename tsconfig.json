{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "lib": ["es2022", "dom", "dom.iterable"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "target": "es2022",
    },
    "include": ["src/**/*", "tsup.config.ts"]
}
